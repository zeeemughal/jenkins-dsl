job('nodeapp-dsl') {
    description('deploy nodeapp on docker container')
    label('docker-arm')
    scm {
        git('https://github.com/zeeemughal/jenkins-nodeapp.git','master')
    }
    triggers {
        githubPush()
    }
    steps {
        shell(""" 
        echo ************ building docker **************
        docker-compose build
        docker-compose up -d
        """)
    }
    publishers {
        mailer('gisselle.reynolds0@ethereal.email',true,true)
    }
}